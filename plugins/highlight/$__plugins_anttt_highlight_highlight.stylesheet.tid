<nowiki>#highlight-occurrencesCount {
color: black;
display: inline-block;
width: 6em;
padding-left: 0.5rem;
padding-right: 1.5rem;
}
#highlight-previous {
margin-left: 0.4rem;
}
#highlight-clear {
margin-left: 1rem;
}
#highlight-next,
#highlight-refresh {
margin-left: 0.2rem;
}
#highlight-next svg.tc-image-down-arrow,
#highlight-previous svg.tc-image-up-arrow,
#highlight-clear svg.tc-image-close-button,
#highlight-refresh svg.tc-image-refresh-button {
width: 1.2rem;
height: 1.2rem;
fill: #AAAAAA;
}
.highlight {
color:            {{$:/plugins/anttt/highlight/config/highlight-color}};
background-color: {{$:/plugins/anttt/highlight/config/highlight-background-color}};
}
.highlight-current {
color:            {{$:/plugins/anttt/highlight/config/highlight-current-color}};
background-color: {{$:/plugins/anttt/highlight/config/highlight-current-background-color}};
}
::highlight(highlight) {
color:            {{$:/plugins/anttt/highlight/config/highlight-color}};
background-color: {{$:/plugins/anttt/highlight/config/highlight-background-color}};
}
::highlight(highlight-current) {
color:            {{$:/plugins/anttt/highlight/config/highlight-current-color}};
background-color: {{$:/plugins/anttt/highlight/config/highlight-current-background-color}};
}
.doc-icon-block {
border-left: 2px solid #e1e1e8;
margin-left: 3em;
padding-left: 0.6em;
position: relative;
}
.doc-block-icon {
position: absolute;
left: -3em;
top: 0.2em;
}
.warning {
fill: maroon;
}
